# SGR Pentest Agent - Configuration Template
# Copy this file to config.yaml and fill in your data

# LLM Configuration
llm:
  api_key: "your-openai-api-key-here"
  base_url: "https://api.openai.com/v1"  # Or your proxy URL
  model: "gpt-4o-mini"
  max_tokens: 4000
  temperature: 0.1
  # proxy: "socks5://127.0.0.1:1081"

# Execution Settings
execution:
  max_steps: 20
  max_clarifications: 2
  max_iterations: 25
  logs_dir: "logs"
  reports_dir: "reports"

# Prompts Configuration
# prompts: {}

# MCP Configuration
mcp:
  mcpServers: {}

# Agent definitions will be loaded from agents.yaml
agents: {}